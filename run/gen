#! /usr/bin/env node

var root = require('./lib/rootpath')

var fs = require('fs-sync')

var tmt = fs.read(root('template.jade'))

var schema = require('stalwart/schema/as-css')

var jade = require('jade')

var xml = jade.render(tmt,
{
	pretty: true,
	schema: schema
})

fs.write(root('Stalwart.tmTheme'), xml)

process.stdout.write(xml + '\n')
